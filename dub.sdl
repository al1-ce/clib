name "clib"
description "c++ stdlib and utils for D with noGC"
authors "Alisa Lain"
copyright "Copyright Â© 2023, Alisa Lain"
license "GPL-3.0"

configuration "library" {
    targetType "library"
    dflags "-betterC"
    sourcePaths "src/"
    importPaths "src/"
    targetPath "bin/"
}

configuration "unittest" {
    targetType "executable"
    sourcePaths "test/"
    importPaths "test/"
    sourcePaths "src/"
    importPaths "src/"
    mainSourceFile "test/test.d"
    targetName "clib-test-library"
    targetPath "bin/"
}
